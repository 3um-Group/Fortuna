{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "npm install"
    }
  ],
  "tasks": {
    "start": {
      "name": "Start Dev Server",
      "command": "npm start",
      "runAtStart": true,
      "preview": {
        "port": 3000
      }
    },
    "test": {
      "name": "Run Unit Tests",
      "command": "npm test",
      "runAtStart": false
    },
    "build": {
      "name": "Build Project",
      "command": "npm run build"
    }
  }
}